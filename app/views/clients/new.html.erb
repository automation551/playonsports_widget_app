<h1>New client</h1>

<% form_for(@client) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :API %><br />
    <%= f.text_field :API %>
  </p>
  <p>
    <b>Branches: </b><br />
    <% Branch.all.each do |branch| %>
      <%= "#{branch.version} (currently: #{branch.widget.version})" %>
      <%= check_box_tag "client[branches][#{branch.id}]", 1, @client.using?(branch) %><br />
    <% end %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', clients_path %>
